<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이번주 정답 번호"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/winningNumber1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="2"/>

            <TextView
                android:id="@+id/winningNumber2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_marginLeft="10dp"
                android:text="5"/>

            <TextView
                android:id="@+id/winningNumber3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_marginLeft="10dp"
                android:text="10"/>

            <TextView
                android:id="@+id/winningNumber4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_marginLeft="10dp"
                android:text="18"/>

            <TextView
                android:id="@+id/winningNumber5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_marginLeft="10dp"
                android:text="30"/>

            <TextView
                android:id="@+id/winningNumber6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_marginLeft="10dp"
                android:text="42"/>

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="구매 할때마다 랜덤 생성되는 6개 숫자"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pickUpNumber1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                tools:text="2"/>

            <TextView
                android:id="@+id/pickUpNumber2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_marginLeft="10dp"
                tools:text="5"/>

            <TextView
                android:id="@+id/pickUpNumber3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_marginLeft="10dp"
                tools:text="10"/>

            <TextView
                android:id="@+id/pickUpNumber4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_marginLeft="10dp"
                tools:text="18"/>

            <TextView
                android:id="@+id/pickUpNumber5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_marginLeft="10dp"
                tools:text="30"/>

            <TextView
                android:id="@+id/pickUpNumber6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_marginLeft="10dp"
                tools:text="42"/>

        </LinearLayout>


        <Button
            android:id="@+id/purchaseBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="로또 한장 구매하기"/>


        <TextView
            android:id="@+id/usesPayTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="사용 금액 : ??원"/>

        <TextView
            android:id="@+id/aggPickPayTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="누적 당첨금액 : ??원"/>

    </LinearLayout>
</layout>